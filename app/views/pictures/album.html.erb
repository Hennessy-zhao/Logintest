<div id="pictures_album">

	<!-- 按钮触发模态框 -->
	<p data-toggle="modal" 
	   data-target="#myModal" class="p1">
	   <span class="glyphicon glyphicon-plus"></span>Create new picture ablum
	</p>
	<!--膜态框-->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
	   aria-labelledby="myModalLabel" aria-hidden="true">
	   <div class="modal-dialog">
	      <div class="modal-content">
	         <div class="modal-header">
	            <button type="button" class="close" 
	               data-dismiss="modal" aria-hidden="true" style="width:10%;float:right;">
	                  &times;
	            </button>
	            <br/><br/>
	            <h4 class="modal-title" id="myModalLabel">
	               The new album's name
	            </h4>
	         </div>
	         <%= form_tag("/pictures/newalbum", method: "post") do |f|  %>
		         <div class="modal-body">
		            <input type="text" name="albumtitle" class="form-control" placeholder="Album Name">
		            <br/>
		            <textarea  name="description" class="form-control" rows="3" placeholder="Please describe your albums in 50 words"></textarea>
		         </div>
		         <div class="modal-footer">
		            <button type="button" class="btn btn-default btn-sm" 
		               data-dismiss="modal" style="width:20%;">Close
		            </button>
		            <input type="submit" class="btn btn-primary btn-sm" style="width:20%;" value="Submit">
		         </div>
	         <% end %>
	      </div>
		</div>
	</div>
	<!--膜态框-->
	<p class="notice">Notice:Album name should not have a space</p>
	<p class="warning"><%= @warning %></p>

</div>




<div id="users_personalmessage">
	<div class="row" id="top">
		<div id="title1">
			<p class="p1">Ttile</p>
		</div>
		<div id="content1">
			<p class="p1">Main Message</p>
		</div>
		<div id="action1">
			<p class="p1">Action</p>
		</div>
	</div>
	<% @permsg.each do |message| %>
		<div class="row" id="body">
			<div id="title2">
				<%= message.title %>
			</div>
			<div id="content2">
			    <%= message.message %>
			</div>
			<div id="action2">
				<%= link_to'look', show_message_path(message.id), class: "btn btn-default btn-xs",target: "_blank" %>
				         			&nbsp;&nbsp;&nbsp;
				<%= link_to'delete', messagedestroy_user_path(message.id), data: { confirm: "Are you sure??" }, class: "btn btn-default btn-xs" %>
			</div>
		</div>
	<% end %>
</div>


